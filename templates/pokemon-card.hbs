<div class="card">
<div class="card-img-top">
<img src="{{sprites.font_default}}" alt="{{name}}">
</div>
<div class="card-body">
<h2 class="card-title"> Імʼя: {{name}}</h2>
<p class="card-text">Вага: {{weight}}</p>
<p class="card-text">Зріст: {{height}}</p>

<p class="card-text"><b>Вміння</b></p>
<ul class="list-group">
{{#each abilities}}
<li class="list-group-item">{{abilities.name}}</li>
{{/each}}
</ul>
</div>
</div>